{
  "manifest_version": 3,
  "name": "Mood Map",
  "description": "Mood Map is a Chrome extension that analyzes the sentiment of social media posts in real-time using a custom-trained AI model. It features a Flask-powered backend that handles data processing and inference, ensuring fast, reliable, and secure sentiment prediction.",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://www.twitter.com/*",
        "https://www.instagram.com/*",
        "https://www.linkedin.com/*",
        "https://www.reddit.com/*",
      ],
      "js": ["content.js"]
    }
  ]
}